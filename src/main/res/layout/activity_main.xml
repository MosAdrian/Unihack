<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/textura_fundal_doi"

    >



    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did you know...?"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_2"
        android:shadowColor="@color/black"
        android:shadowRadius="8"
        android:shadowDx="-3"
        android:shadowDy="4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Romanian Geography"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_2"
        android:textAlignment="center"
        android:shadowColor="@color/black"
        android:shadowRadius="8"
        android:shadowDx="-3"
        android:shadowDy="4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose :"
        android:textSize="48dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_2"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:shadowColor="@color/black"
        android:shadowRadius="8"
        android:shadowDx="-3"
        android:shadowDy="4"
        />

    <Button
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:text="@string/btn1"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font_2"
        android:padding="20dp"
        android:textSize="40dp"
        android:id="@+id/relief"
        android:background="@drawable/main_btns"
        />
    <Button
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:text="@string/btn2"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font_2"
        android:padding="20dp"
        android:textSize="40dp"
        android:id="@+id/hydrography"
        android:background="@drawable/main_btns"
        />
    <Button
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:text="@string/btn3"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font_2"
        android:padding="20dp"
        android:textSize="40dp"
        android:id="@+id/political_map"
        android:background="@drawable/main_btns"
        />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>